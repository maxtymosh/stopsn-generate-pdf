<style>
    .factor {
        display: block;
        box-sizing: border-box;
        margin: 0px -8px;
    }

    .factor::after {
        clear: both;
        content: '';
        display: block;
    }

    .factor__item {
        float: left;
        box-sizing: border-box;
        width: 33.33%;
        padding: 0px 8px;
        margin-bottom: 20px;
    }

    .factor__item:nth-child(3n + 1) {
        clear: both;
    }

    .factor__content {
        position: relative;
        color: #242424;
        box-sizing: border-box;
        height: auto;
        /* padding: 10px; */
    }

    .factor__content img {
        position: absolute;
        top: 0;
        left: 0;
    }

    .factor__content .circle {
        position: absolute;
        top: 0;
        display: inline-block;
        width: 16px;
        height: 16px;
        margin-right: 10px;
        border: 1px solid grey;
        border-radius: 50%;
    }

    .factor__content .circle.active {
        border: 1px solid grey;
        background-color: red;
    }

    .factor__content .text {
        font-family: 'Open Sans';
        margin-left: 25px;
        display: inline-block;
        /* width: 78%; */
        font-weight: 400;
        font-size: 10px;
        line-height: 12px;
        color: #000;
    }

    .factor__content .text--margin {
        /* padding-top: 20px; */
        padding-left: 30px;
    }

    .factors__text {
        margin-bottom: 10px;
        padding: 5px 15px;
        background-color: #f9f9f9;
        border-left: 2px solid #e01f2d;
        font-size: 12px;
        line-height: 16px;
        letter-spacing: -1px;
    }

    .hr {
        border: 1px solid #eee;
        margin: 0 0 20px 0;
    }

    .hr--wide {
        margin: 0 -20px 10px -20px;
        border: 1px solid #f5f5f5;
    }

    .ask {
        margin-bottom: 10px;
        counter-reset: section;
        list-style-type: none;
    }

    .ask__item {
        position: relative;

        font-size: 10px;
        line-height: 25px;
        padding: 0 10px 0 30px;
        margin-bottom: 2px;
        background-color: #F9F9F9;
        letter-spacing: -0.5px;
    }

    .ask__item::before {
        position: absolute;
        top: 0;
        left: 0;
        padding: 5px 0;
        counter-increment: section;
        content: counters(section, ".") " ";
        background-color: #e6e6e6;
        max-width: 25px;
        width: 100%;
        max-height: 25px;
        font-size: 16px;
        line-height: 1;
        text-align: center;
    }

    .association {
        font-family: "Open Sans";
        font-size: 6px;
        line-height: 8px;
    }

    .association__link {
        color: #e01f2d;
    }
</style>


